{
  "name": "Chess Analytics",
  "description": "Get good",
  "version": "1",
  "manifest_version": 2,
  "content_security_policy": "default-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": [
        "./lib/chess.js",
        "./lib/chart.umd.js",
        "./lib/chartjs-plugin-datalabels.min.js",
        "./lib/custom-elements-polyfill.min.js",
        "./elo-slider.js",
        "./puzzle-rating.js",
        "./utils.js",
        "./script.js"
      ],
      "css": ["./view.css"]
    }
  ],
  "web_accessible_resources": ["./lib/chart.umd.js.map", "view.html"],
  "permissions": ["<all_urls>"]
}
