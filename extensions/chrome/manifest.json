{
  "name": "Chess Analytics",
  "description": "Get good",
  "version": "1",
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "cristianrgreco@gmail.com",
      "strict_min_version": "42.0"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://lichess.org/api/token; object-src 'self'",
  "background": {
    "scripts": ["auth.js", "stockfish.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://lichess.org/*"],
      "js": [
        "./utils.js",
        "./script.js",
        "./lib/stockfish-nnue-16.js",
        "./lib/chess.js",
        "./lib/chart.umd.js",
        "./lib/chartjs-plugin-datalabels.min.js"
      ],
      "css": ["./view.css"]
    }
  ],
  "web_accessible_resources": ["./lib/chart.umd.js.map", "./lib/stockfish-nnue-16.wasm", "view.html"],
  "permissions": ["https://lichess.org/*", "identity", "storage"]
}
